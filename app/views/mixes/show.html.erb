<div class="what">
  <div class="banner-mixes-container">
    <span class="hidden-title"><%= title @mix.title %></span>
    <%= render 'navbar' %>
    <h2 class="banner-mixes-title">
      DJ Mixes
    </h2>
  </div>
  <div class="singletrack-content-container">
    <div class="back-button">
      <%= link_to "< Back", mixes_url  %>
    </div>
    <div class="singletrack-content-header">
      <div class="singletrack-artwork">
        <%= image_tag(@mix.artwork, height: "400", width: "400", alt: @mix.title) %>
      </div>
      <div class="singletrack-info">
        <h3 class="singletrack-title">
          <%= @mix.title %>
        </h3>
        <div class="singletrack-genre">
          <%= @mix.genre %>
            â€¢
          <%= @mix.date.to_s[0..3] %>
        </div>
        <div class="singletrack-content-description">
          <%= @mix.description %>
        </div>
      </div>
    </div>
    <div class="singletrack-player">
      <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= @mix.soundcloud_url %>&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
    </div>
  </div>
  <div class="footer">
    <%= render 'footer' %>
  </div>
</div>
